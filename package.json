{
	"name": "blockstyles",
	"private": true,
	"version": "0.1.0",
	"description": "EthBlock.art blockstyles",
	"keywords": [
		"ethblock.art",
		"blockstyles"
	],
	"author": {
		"name": "Nano Miratus",
		"email": "nanomiratus@gmail.com",
		"url": "https://pumpn.net/"
	},
	"contributors": [
		{
			"name": "Nano Miratus",
			"email": "nanomiratus@gmail.com",
			"url": "https://pumpn.net/",
			"github": "https://github.com/nnmrts",
			"twitter": "https://twitter.com/nnmrts"
		}
	],
	"funding": [
		{
			"type": "individual",
			"url": "https://paypal.me/nnmrts"
		},
		{
			"type": "patreon",
			"url": "https://www.patreon.com/nnmrts"
		}
	],
	"files": [
		"./source",
		"./build"
	],
	"main": "./build/index.js",
	"browser": "build/index.html",
	"module": "source/index.js",
	"type": "module",
	"exports": {
		"import": "./source/index.js",
		"require": "./build/index.node.cjs"
	},
	"directories": {
		"bin": "./bin",
		"doc": "./docs",
		"lib": "./source",
		"example": "./examples",
		"test": "./tests"
	},
	"repository": "pumpncode/template",
	"scripts": {
		"start": "parcel serve ./source/index.html && rm -rf ./dist",
		"build": "parcel build ./source/index.html --target browser",
		"build:eba": "parcel build \"./source/styles/!(prop-types).js\" --target eba --no-content-hash --no-cache",
		"lint:md": "markdownlint **/*.md --ignore node_modules",
		"lint": "eslint ./source",
		"release": "np",
		"test": "ava --verbose"
	},
	"config": {
		"port": "9000"
	},
	"devDependencies": {
		"@babel/plugin-syntax-bigint": "^7.8.3",
		"@babel/preset-react": "^7.12.13",
		"@parcel/transformer-sass": "^2.0.0-nightly.651",
		"@pumpn/babel-preset": "^3.2.1",
		"@pumpn/eslint-config": "^10.3.1",
		"@pumpn/np-config": "^2.3.1",
		"@pumpn/parcel-optimizer-prepend": "^0.4.0",
		"ava": "^3.15.0",
		"eslint": "^7.21.0",
		"eslint-plugin-react": "^7.22.0",
		"parcel": "^2.0.0-nightly.610",
		"postcss": "^8.2.8",
		"postcss-custom-properties": "^11.0.0",
		"postcss-import": "^14.0.0",
		"postcss-url": "^10.1.1",
		"stylelint": "^13.12.0",
		"stylelint-config-idiomatic-order": "^8.1.0",
		"stylelint-config-sass-guidelines": "^8.0.0",
		"stylelint-config-standard": "^21.0.0"
	},
	"engines": {
		"node": ">=15.0.0",
		"npm": ">=7.0.0"
	},
	"dependencies": {
		"antd": "^4.13.1",
		"chroma-js": "^2.1.1",
		"got": "^11.8.2",
		"prop-types": "^15.7.2",
		"react": "^17.0.1",
		"react-color": "^2.19.3",
		"react-cool-dimensions": "^1.3.2",
		"react-dom": "^17.0.1",
		"react-p5": "^1.3.13"
	},
	"targets": {
		"main": false,
		"module": false,
		"eba": {
			"context": "node",
			"distDir": "./build/eba",
			"engines": {
				"node": ">=15.0.0",
				"npm": ">=7.0.0",
				"browsers": "> 0.25%"
			},
			"includeNodeModules": false,
			"isLibrary": true,
			"optimize": false,
			"outputFormat": "esmodule",
			"scopeHoist": true
		}
	},
	"parcel-optimizer-prepend": "/* eslint no-undef: \"off\" */\n"
}
